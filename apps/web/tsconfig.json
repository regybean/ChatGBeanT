{
    "extends": "../../tooling/typescript/base.json",
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "ES2023"
        ],
        "jsx": "react-jsx",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts",
        "src/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "eslint.config.ts"
    ]
}