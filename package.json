{
    "name": "chatgbeant",
    "private": true,
    "scripts": {
        "predev": "bash scripts/check-remote-cache.sh",
        "dev": "turbo run dev",
        "build": "turbo run build",
        "clean": "turbo run clean && rm -rf node_modules",
        "format": "turbo run format --continue -- --check",
        "format:fix": "turbo run format --continue -- --write",
        "lint": "turbo run lint",
        "typecheck": "turbo run typecheck",
        "deps:check": "pnpm outdated",
        "deps:format": "pnpm sort-package-json 'package.json' 'apps/*/package.json' 'backend/package.json' 'packages/*/package.json' 'tooling/*/package.json'",
        "deps:lint": "syncpack lint",
        "deps:update": "pnpm update -i -r --latest"
    },
    "devDependencies": {
        "convex": "catalog:",
        "prettier": "catalog:",
        "sort-package-json": "3.6.0",
        "syncpack": "13.0.4",
        "turbo": "catalog:"
    },
    "engines": {
        "node": ">=20.19.4"
    },
    "packageManager": "pnpm@10.15.1"
}